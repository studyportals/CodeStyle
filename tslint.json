{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "eofline": false,
        "array-type": [
            true,
            "array"
        ],
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "no-string-literal": false,
        "arrow-parens": false,
        "member-ordering": [
            true,
            {
                "order": "fields-first"
            }
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "never",
                    "arrays": "never",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "singleline": {
                    "objects": "never",
                    "arrays": "never",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-preblock",
            "check-decl",
            "check-type",
            "check-typecast",
            "check-module"
        ],
        "no-namespace": [
            true,
            "allow-declarations"
        ],
        "indent": [
            true,
            "tabs"
        ],
        "forin": false,
        "no-console": [
            true,
            "log",
            "info",
            "debug"
        ]
    }
}
